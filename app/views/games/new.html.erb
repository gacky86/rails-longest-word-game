<h1>New Game</h1>

<div class="letter-container">
  <% @letters.each do |letter| %>
    <div class="letter shadow">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="score" method="post" class="answer-form" data-turbo="false">
  <h3>What is the longest word you can find?</h3>
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="question" name="answer">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <button type="submit" class="btn btn-primary input-group-text">Answer!</button>
  </div>
</form>
